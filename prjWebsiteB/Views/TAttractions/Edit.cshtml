@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function(){
            
            //console.log('@Html.Raw(Model.FRegion)');
            $('#FRegion').val('@Html.Raw(Model.FRegion)');
            //console.log($('#FRegion').val());
            $('#FCategoryId').val(@Html.Raw(Model.FCategoryId));
            $('#FStatus').val('@Html.Raw(Model.FStatus)');

            function previewImage(inputFile){
                if(inputFile.files && inputFile.files[0]){
                    let allowType="image.*";
                    if(inputFile.files[0].type.match(allowType)){
                        let reader = new FileReader();
                        reader.onload = function(e){
                            $('#FImage').prev().attr('src', e.target.result);
                            $('#FImage').prev().attr('title', inputFile.files[0].name);
                        }
                        reader.readAsDataURL(inputFile.files[0]);
                        $('.btn').prop('disabled', false);
                    }else{
                        alert("不支援上傳的檔案格式");
                        $('.btn').prop('disabled', true);
                        inputFile.value="";
                    }
                }
            }

            $('#FImage').on('change', function(){
                previewImage(this);
            });
        });

    </script>
}
