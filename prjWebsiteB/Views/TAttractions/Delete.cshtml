@model prjWebsiteB.AttractionViewModels.TAttraction

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        .carousel {
            width: 800px;
            position: relative;
        }

        #carouselImage {
            width: 600px;
            height: 300px;
            position: relative;
            left: 100px;
        }

        #previous {
            width: 50px;
            height: 50px;
            position: absolute;
            top: 125px;
            left: 0px;
        }

        #next {
            width: 50px;
            height: 50px;
            position: absolute;
            top: 125px;
            left: 750px;
        }

        .progress-bar-container {
            width: 100px;
            height: 5px;
            position: absolute;
            left: 350px;
            bottom: 20px;
            background: rgba(255, 255, 255, 0.5);
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 10px;
        }

        .progress-bar {
            width: 0%;
            height: 100%;
            background: rgba(255, 255, 255, 0.6);
        }
    </style>
}

