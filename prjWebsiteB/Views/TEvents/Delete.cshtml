@model prjWebsiteB.Models.TEvent

@{
    ViewData["Title"] = "刪除活動";
}

<h1>刪除活動</h1>

<h3>確定要刪除此活動嗎？</h3>
<div>
    <h4>@Model.FEventName</h4>
    <dl class="row">
        <dt class="col-sm-2">描述</dt>
        <dd class="col-sm-10">@Model.FEventDescription</dd>
        <dt class="col-sm-2">開始日期</dt>
        <dd class="col-sm-10">@Model.FEventStartDate</dd>
        <dt class="col-sm-2">結束日期</dt>
        <dd class="col-sm-10">@Model.FEventEndDate</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="FEventId" />
        <button type="submit" class="btn btn-danger">刪除</button>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </form>
</div>
