@model TEvent

@{
    ViewData["Title"] = "編輯活動";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">編輯活動</h1>
            <hr />
            <form asp-action="Edit" asp-controller="TEvents" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FEventId" />

                <div class="form-group">
                    <label class="control-label">建立者</label>
                    <input type="text" class="form-control"
                           value="@(Model.FUser != null ? Model.FUser.FUserName : "未知建立者")" readonly />
                </div>

                <!-- 活動名稱 -->
                <div class="form-group">
                    <label asp-for="FEventName" class="control-label">活動名稱</label>
                    <input asp-for="FEventName" class="form-control" placeholder="請輸入活動名稱" />
                    <span asp-validation-for="FEventName" class="text-danger"></span>
                </div>

                <!-- 活動描述 -->
                <div class="form-group">
                    <label asp-for="FEventDescription" class="control-label">活動說明</label>
                    <textarea asp-for="FEventDescription" class="form-control" placeholder="請輸入活動描述"></textarea>
                    <span asp-validation-for="FEventDescription" class="text-danger"></span>
                </div>

                <!-- 活動地點 -->
                <div class="form-group">
                    <label asp-for="FEventLocation" class="control-label">活動地點</label>
                    <input asp-for="FEventLocation" class="form-control" placeholder="請輸入活動地點" />
                    <span asp-validation-for="FEventLocation" class="text-danger"></span>
                </div>

                <!-- 活動日期 -->
                <div class="form-group">
                    <label asp-for="FEventStartDate" class="control-label">開始日期</label>
                    <input asp-for="FEventStartDate" type="date" class="form-control" />
                    <span asp-validation-for="FEventStartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FEventEndDate" class="control-label">結束日期</label>
                    <input asp-for="FEventEndDate" type="date" class="form-control" />
                    <span asp-validation-for="FEventEndDate" class="text-danger"></span>
                </div>

                <!-- 活動費用 -->
                <div class="form-group">
                    <label asp-for="FEventActivityfee" class="control-label">報名費用</label>
                    <input asp-for="FEventActivityfee" type="number" class="form-control" placeholder="請輸入報名費用" />
                    <span asp-validation-for="FEventActivityfee" class="text-danger"></span>
                </div>

                <!-- 人數限制 -->
                <div class="form-group">
                    <label asp-for="FEventMaxParticipants" class="control-label">人數上限</label>
                    <input asp-for="FEventMaxParticipants" type="number" class="form-control" placeholder="請輸入人數上限" />
                    <span asp-validation-for="FEventMaxParticipants" class="text-danger"></span>
                </div>

                <!-- 活動狀態 -->
                <div class="form-group">
                    <label asp-for="FEventIsActive" class="control-label">活動狀態</label>
                    <select asp-for="FEventIsActive" class="form-control">
                        <option value="true">啟用</option>
                        <option value="false">停用</option>
                    </select>
                    <span asp-validation-for="FEventIsActive" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="uploadedFiles">圖片上傳</label>
                    <input type="file" id="uploadedFiles" name="uploadedFiles" multiple class="form-control-file" accept="image/*" />

                    <!-- 顯示現有圖片 -->
                    @if (Model.TEventImages != null && Model.TEventImages.Any())
                    {
                        <div class="mt-3" id="existingImages">
                            @foreach (var image in Model.TEventImages)
                            {
                                <img src="@Url.Action("GetEventImage", "TEvents", new { id = image.FEventImageId })"
                                     class="img-thumbnail m-1"
                                     style="width: 150px; height: auto;" />
                            }
                        </div>
                    }

                    <!-- 新圖片預覽 -->
                    <div id="newImagePreview" class="mt-3"></div>
                </div>

                <!-- 按鈕 -->
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">保存</button>
                    <a asp-action="Index" class="btn btn-secondary">取消</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const uploadedFilesInput = document.getElementById('uploadedFiles');
            const newImagePreview = document.getElementById('newImagePreview');

            if (uploadedFilesInput && newImagePreview) {
                uploadedFilesInput.addEventListener('change', function (event) {
                    const files = event.target.files;
                    newImagePreview.innerHTML = ""; // 清空預覽區域

                    // 遍歷文件並生成預覽圖片
                    Array.from(files).forEach(file => {
                        if (file && file.type.startsWith('image/')) { // 檢查是否為圖片文件
                            const reader = new FileReader();
                            reader.onload = function (e) {
                                const img = document.createElement("img");
                                img.src = e.target.result; // 設置圖片來源
                                img.className = "img-thumbnail m-1";
                                img.style.width = "150px";
                                img.style.height = "auto";
                                newImagePreview.appendChild(img);
                            };
                            reader.readAsDataURL(file);
                        } else {
                            console.warn("非圖片文件已忽略:", file.name);
                        }
                    });
                });
            }
        });
    </script>    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
