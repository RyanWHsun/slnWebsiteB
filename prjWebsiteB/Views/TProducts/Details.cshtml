        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FCategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FCategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FUserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FUserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FImage)
        </dt>
        <dd class="col-sm-10">
            <div id="imagesContainer" class="image-container"></div>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        var baseAddress = window.location.origin;

        $(document).ready(function() {
            var p = encodeURI('@Model.FProductId');
            $.ajax({
                url: `${baseAddress}/TProducts/GetPictures/${p}`,
                type: 'GET',
                dataType: 'json' // 確保 jQuery 期望接收 JSON 數據
            })
            .done(data => {
                // 清空圖片容器
                $('#imagesContainer').empty();

                var validImageCount = 0;

                for (var i = 0; i < 3; i++) {
                    // 檢查是否有返回圖片數據
                    if (data && data.length > i) {
                        // 創建並顯示圖片
                        var img = $('<img />', {
                            src: 'data:image/jpeg;base64,' + data[i],
                            class: 'img-thumbnail',
                            alt: 'Product Image',
                            width: '150px' // 設置圖片寬度
                        });
                        $('#imagesContainer').append(img);
                        validImageCount++;
                    }
                }

                // 如果沒有任何有效圖片，顯示提示信息
                if (validImageCount === 0) {
                    $('#imagesContainer').text("尚無商品圖片!");
                }
            })
            .fail(err => {
                alert('Failed to load images');
            });
        });
    </script>

}

