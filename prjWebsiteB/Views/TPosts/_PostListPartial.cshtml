@model IEnumerable<prjWebsiteB.Models.TPost>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FPostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FIsPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCategory.FName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FPostId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FUserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FCreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FUpdatedAt)
                </td>
                <td>
                    @(item.FIsPublic.HasValue ? (item.FIsPublic.Value ? "公開" : "私人") : "")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FCategory.FName)
                </td>

                @*  <td>
                    <a asp-action="Edit" asp-route-id="@item.FPostId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.FPostId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.FPostId" class="btn btn-danger">Delete</a>
                </td> *@
                <td>
                    <button type="button" onclick="btnData()" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editPostModal"
                            data-FPostId="@item.FPostId"
                            data-FUserId="@item.FUserId"
                            data-FTitle="@item.FTitle"
                            data-FContent="@item.FContent"
                            data-FCreatedAt="@item.FCreatedAt"
                            data-FUpdatedAt="@item.FUpdatedAt"
                            data-FIsPublic="@item.FIsPublic">
                        修改
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap Modal -->
<div class="modal fade" id="editPostModal" tabindex="-1" aria-labelledby="addPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPostModalLabel">修改</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FPostId)</dt>
                        <dd id="editFPostId" class="col-sm-9"></dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FUserId)</dt>
                        <dd id="editFUserId" class="col-sm-9"></dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FTitle)</dt>
                        <dd id="editFTitle" class="col-sm-9"></dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FContent)</dt>
                        <dd id="editFContent" class="col-sm-9"></dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FCreatedAt)</dt>
                        <dd id="editFCreatedAt" class="col-sm-9"></dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FUpdatedAt)</dt>
                        <dd id="editFUpdatedAt" class="col-sm-9"></dd>
                        <dt class="col-sm-3"> @Html.DisplayNameFor(model => model.FIsPublic)</dt>
                        <dd class="col-sm-9">
                            <select id="FIsPublicSelect" name="FIsPublic" class="form-control">
                                <option value="true">公開</option>
                                <option value="false">私人</option>
                            </select>
                        </dd>
                    </dl>
                </div>
                <button id="submitBtn" type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="Update()">送出</button>
            </div>
        </div>
    </div>
</div>