@model IEnumerable<prjWebsiteB.Models.TPost>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead class="table-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FPostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FUpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FIsPublic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCategory.FName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FPostId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FUserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FCreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FUpdatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FIsPublic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FCategory.FName)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.FPostId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.FPostId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.FPostId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
